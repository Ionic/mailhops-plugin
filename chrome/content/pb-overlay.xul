				<separator class="dataPaneBoxSeparator" flex="1"></separator>
			</hbox>

      <hbox class="mailHopsLinkContainer">
				<vbox><button id="mailhopsDataPaneMapLink" class="navButton">&mailhops_route_nav_map_label;</button></vbox>
